{
  "name": "ssh-manager",
  "version": "1.0.0",
  "description": "A robust SSH key manager with clipboard integration for seamless key generation and retrieval",
  "main": "src/index.js",
  "bin": {
    "ssh-manager": "./src/cli-simple.js",
    "sshm": "./src/cli-simple.js",
    "ssh-gen": "./src/cli-simple.js",
    "ssh-copy": "./src/cli-simple.js",
    "ssh-list": "./src/cli-simple.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "test": "node test-cross-platform.js",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:cross-platform": "node test-cross-platform.js",
    "install-deps": "node install-cross-platform.js",
    "setup": "npm install && npm run install-deps",
    "setup-global": "npm install && npm link",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "pkg . --out-path dist/",
    "install-global": "npm link",
    "generate": "node src/cli-simple.js generate",
    "list": "node src/cli-simple.js list",
    "copy": "node src/cli-simple.js copy",
    "status": "node src/cli-simple.js status",
    "uninstall-global": "npm unlink"
  },
  "keywords": [
    "ssh",
    "key-management",
    "clipboard",
    "security",
    "cli",
    "automation"
  ],
  "author": "SSH Manager",
  "license": "MIT",
  "dependencies": {
    "clipboardy": "^3.0.0",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^11.1.1",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ssh-manager.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ssh-manager/issues"
  },
  "homepage": "https://github.com/your-username/ssh-manager#readme"
}
